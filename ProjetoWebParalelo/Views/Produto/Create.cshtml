@model Modelo.Cadastro.Produto

@{
    ViewData["Title"] = "Cadastrar";
}
<h4>Cadastro Produto</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Perfil" class="control-label"></label>
                <input asp-for="Perfil" class="form-control" />
                <span asp-validation-for="Perfil" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CodBarra" class="control-label"></label>
                <input asp-for="CodBarra" class="form-control" />
                <span asp-validation-for="CodBarra" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Fabricante</label>
                <select asp-for="FabricanteId" class ="form-control" 
                asp-items="@(new SelectList(@ViewBag.Fabricantes, "FabricanteId", "Nome"))"></select>
            </div>
            <div class="form-group">
                <tr>
                    <td>
                        <input type="submit" value="Enviar" class="btn btn-outline-primary" />
                    </td>
                    <td>
                        <a asp-action="Index" class="btn btn-outline-danger">Voltar</a>
                    </td>
                </tr>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
