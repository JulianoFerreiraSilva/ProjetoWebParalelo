@model Modelo.Cadastro.Fabricante

@{
    ViewData["Title"] = "Editar Fabricante";
}

<h4>Fabricante</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="FabricanteId" />
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Nacionalidade" class="control-label"></label>
                <input asp-for="Nacionalidade" class="form-control" />
                <span asp-validation-for="Nacionalidade" class="text-danger"></span>
            </div>
            <div class="form-group">
                <tr>
                    <td>
                        <input type="submit" value="Salvar" class="btn btn-outline-primary" />
                    </td>
                    <td>
                        <a asp-action="Index" class="btn btn-outline-dark">Voltar</a>
                    </td>
                </tr>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
